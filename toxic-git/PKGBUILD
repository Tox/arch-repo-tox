# Maintainer: ?

pkgname=toxic-git
pkgdesc='CLI Frontend in ncurses for Tox'
license=('GPL3')
pkgver=0.6.0.r10.g5ff1517
pkgrel=1
depends=(
  'freealut'
  'libconfig'
  'libnotify'
  'libvpx'
  'opus'
  'tox'
)
makedepends=('git')
conflicts=('toxic')
provides=('toxic')
arch=('i686' 'x86_64' 'arm' 'armv6h' 'armv7h')
url=('http://tox.im')
source=('git+https://github.com/Tox/toxic.git')
md5sums=('SKIP')

_gitname=toxic

pkgver() {
    cd "${srcdir}/${_gitname}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=/usr
}

package() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=/usr DESTDIR="${pkgdir}" install
}
