# Maintainer: ?

_pkgname=ratox
pkgname=$_pkgname-git
pkgver=0.1.r40.ge243b73
pkgrel=1
pkgdesc="FIFO based tox client"
arch=('i686' 'x86_64') # probably supports far more, need to make sure
url="http://ratox.2f30.org"
license=('custom:BSD')
depends=(
  'glibc'
  'tox-git'
)
makedepends=('git')
provides=("$_pkgname")
conflicts=("$_pkgname")
source=("$_pkgname::git+http://git.2f30.org/ratox/"
        "config.h")
md5sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd "$_pkgname"
  # uncomment, if you want to use your own config.h
  #cp "$srcdir/config.h" .
}

build() {
  cd "$_pkgname"
  make
}

package() {
  cd "$_pkgname"
  make DESTDIR="$pkgdir" PREFIX=/usr install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
