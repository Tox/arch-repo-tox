# Maintainer: ?

pkgname=tox-prpl-git
_gitname=tox-prpl
pkgver=0.3.0.r5.g191cdcc
pkgrel=1
pkgdesc="Tox protocol plugin for pidgin / libpurple"
arch=('i686' 'x86_64') # other archs?
url="http://tox.dhs.org/"
license=('GPL3')
depends=(
  'libpurple'
  'tox-git'
)
makedepends=('autoconf' 'git' 'libconfig')
optdepends=('pidgin')
options=('!libtool')
conflicts=('tox-prpl')
provides=('tox-prpl')
source=('git://github.com/jin-eld/tox-prpl.git')
md5sums=('SKIP')

pkgver() {
  cd "$_gitname"
  printf 'r%s.%s' "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$_gitname"
  autoreconf -if
  ./configure --prefix=/usr
  make
}

package() {
  cd "$_gitname"
  make DESTDIR="$pkgdir" install
}
